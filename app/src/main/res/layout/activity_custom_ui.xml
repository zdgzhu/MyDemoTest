<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.CustomUIActivity">
    
    <com.mydemotest.UI.CircleView
        android:id="@+id/circle01"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#000"
        />

    <View
        android:id="@+id/view01"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="#0f0"
        app:layout_constraintTop_toBottomOf="@+id/circle01"
        />

    <com.mydemotest.UI.CircleView
        android:id="@+id/circle02"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="20dp"
        android:background="#000"
        app:circle_color="#00f"
        app:layout_constraintTop_toBottomOf="@+id/view01"
        />

    <View
        android:id="@+id/view02"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="#0f0"
        app:layout_constraintTop_toBottomOf="@+id/circle02"
        />

    <com.mydemotest.UI.CircleView
        android:id="@+id/circle03"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="20dp"
        android:background="#000"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@+id/view02"
        />


    <View
        android:id="@+id/view03"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="#0f0"
        app:layout_constraintTop_toBottomOf="@+id/circle03"
        />

    <com.mydemotest.UI.CircleView
        android:id="@+id/circle04"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_margin="20dp"
        android:background="#000"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@+id/view03"
        />

    <View
        android:id="@+id/view04"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="#0f0"
        app:layout_constraintTop_toBottomOf="@+id/circle04"
        />





</android.support.constraint.ConstraintLayout>