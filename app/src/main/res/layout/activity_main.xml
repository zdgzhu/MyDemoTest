<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">

    <TextView
        android:id="@+id/tv01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="约束条件控制"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <Button
        android:id="@+id/btn01"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:text="@string/btn_main_act01"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv01"
        />
    <Button
        android:id="@+id/btn02"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:text="@string/btn_main_act02"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn01"
        />

    <Button
        android:id="@+id/btn03"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:text="@string/btn_main_act03"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn02"
        />

    <Button
        android:id="@+id/btn04"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:text="@string/btn_main_act04"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn03"
        />

    <Button
        android:id="@+id/btn05"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:text="@string/btn_main_act05"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn04"
        />

    <Button
        android:id="@+id/btn06"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:text="@string/btn_main_act06"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn05"
        />

    <Button
        android:id="@+id/btn07"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:text="@string/btn_main_act07"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn06"
        />


</android.support.constraint.ConstraintLayout>